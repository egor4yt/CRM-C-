<Page x:Class="EErmakov.SoftwareDevelop.WindowsApplication.Pages.ExportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EErmakov.SoftwareDevelop.WindowsApplication.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="670" d:DesignWidth="1000"
      Title="Создание отчёта" Loaded="Page_Loaded">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnExportClients" Width="250" Height="30" Content="Сохранить отчет по клиентам" Click="btnExportClients_Click"
                    Margin="10"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Каждый клиент на новой странице"/>
                <ToggleButton x:Name="tbSetInsertBreak" Margin="5 0" IsChecked="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
